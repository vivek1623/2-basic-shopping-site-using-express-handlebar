extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main.product-list-container
    if products.length === 0 
      div.not-found-wrapper
        img(src="/img/empty.png", alt="" style="width:500px; max-width:90%;")
        h1(style="text-align:center")  Product Not Found!
    else
      each product in products
        article.card.product-item
          header.card__header
            h1.product__title #{product.title}
          div.card__image
            img(src="https://dummyimage.com/300x300/363236/fff&text=product", alt="")
          div.card__content
            h2.product__price 200.00/-
            p.product__description
          .card__actions
            button.btn Add to cart